<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_constructor_chapter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.john.project1.Constructor_chapter"
    >

    <ScrollView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/code_construct"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:src="@drawable/construct_code3" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_width="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/scrollView2"
        android:layout_marginLeft="50dp"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/playbtnConstruct"
            android:layout_weight="1"
            android:background="@drawable/playbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pausebtnConstruct"
            android:layout_weight="1"
            android:background="@drawable/pausebtn" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopbtnConstruct"
            android:layout_weight="1"
            android:background="@drawable/stopbtn" />
    </LinearLayout>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/arrow"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginEnd="235dp"
        android:id="@+id/pointer_construct" />

    <ImageView
        android:id="@+id/pic_construct"
        android:layout_alignParentEnd="true"
        android:layout_height="200dp"
        android:background="#AEEA00"
        android:layout_width="270dp" />

    <TextView
        android:text="Class "
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/class_text_Construct"
        android:textAlignment="viewEnd"
        android:layout_width="90dp"
        android:textSize="18sp" />

    <TextView
        android:text="Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_str_construct"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignBottom="@+id/pic_construct"
        android:layout_alignStart="@+id/pic_construct"
        android:background="@android:color/holo_orange_light"
        android:textSize="18sp" />

    <TextView
        android:text="Object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/object_text_Construct"
        android:textColor="#33691E"
        android:layout_marginEnd="15dp"
        android:textSize="18sp"
        android:layout_below="@+id/class_text_Construct"
        android:layout_toStartOf="@+id/class_text_Construct" />

    <TextView
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pic_construct"
        android:layout_alignParentEnd="true"
        android:id="@+id/num_construct"
        android:textSize="18sp"
        android:textColor="#6200EA"
        android:textStyle="normal|bold"
        android:background="#FF7043"
        android:layout_width="25dp"
        android:textAlignment="center" />

    <TextView
        android:text="str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_str_construct"
        android:layout_alignStart="@+id/pic_construct"
        android:id="@+id/str_header"
        android:textStyle="normal|bold"
        android:layout_marginLeft="10dp" />

    <TextView
        android:text="num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num_construct"
        android:layout_alignParentEnd="true"
        android:id="@+id/num_header"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Error!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num_header"
        android:layout_alignStart="@+id/object_text_Construct"
        android:layout_marginBottom="49dp"
        android:id="@+id/error_text"
        android:textSize="18sp"
        android:textColor="#B71C1C" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="100dp"
        android:id="@+id/layout_output_construct"
        android:layout_width="250dp"
        android:layout_alignStart="@+id/pic_construct"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/linearLayout2">

        <TextView
            android:text="num มีค่าเป็น 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/output_construct"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

</RelativeLayout>
