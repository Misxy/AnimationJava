<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/classesandobjects"
        android:layout_marginBottom="366dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart" />

    <ImageButton
        android:id="@+id/goDatahide"
        android:background="@drawable/nextbtn"
        android:layout_marginEnd="12dp"
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/c_o"
        android:layout_marginBottom="210dp"
        android:layout_height="150dp"
        android:layout_above="@+id/goDatahide"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="28dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_above="@+id/goDatahide"
        android:layout_alignParentStart="true">

        <TextView
            android:text="@string/objectclass_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@android:color/black"
            android:background="#A5D6A7" />

        <TextView
            android:text="@string/objectcalss_detail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@android:color/black"
            android:background="#89C4F4"
            android:layout_weight="0.29" />
    </LinearLayout>

</RelativeLayout>
